<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:background="@color/first_color"
    tools:context=".MainFragment">

    <ImageView
        android:id="@+id/theIcon"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/the_bank_icon"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theBank"
        app:srcCompat="@drawable/thebank" />

    <Button
        android:id="@+id/btLoginBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="100dp"
        android:text="@string/login"
        android:textColor="#19916b"
        app:backgroundTint="@color/white"
        app:cornerRadius="50sp"
        app:layout_constraintStart_toStartOf="@+id/theIcon"
        app:layout_constraintTop_toBottomOf="@+id/theIcon" />

    <Button
        android:id="@+id/btSignInBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/sign_in"
        android:textColor="#19916b"
        app:backgroundTint="@color/white"
        app:cornerRadius="50sp"
        app:layout_constraintEnd_toEndOf="@+id/theIcon"
        app:layout_constraintTop_toTopOf="@+id/btLoginBank" />

    <TextView
        android:id="@+id/theBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="@string/the_bank"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>